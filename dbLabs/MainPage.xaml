                <Button Text="Update Auto price by Name" HorizontalOptions="Start" Clicked="UpdatePriceAuto"/>
                <Entry x:Name="updatePriceAuto" TextColor="Magenta" Text="7000"/>
                <Button Text="Delete Auto by name" HorizontalOptions="Start" Clicked="DeleteAutoName"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Button Text="JoinContract" HorizontalOptions="Start" Clicked="JoinContract"/>
                <Button Text="Average Contract" HorizontalOptions="Start" Clicked="AverageContract"/>
                <Button Text="Auto Usage" HorizontalOptions="Start" Clicked="AutoUsage"/>
                <Button Text="Teacher Practice" HorizontalOptions="Start" Clicked="TeacherPractice"/>
