        <StackLayout Orientation="Horizontal">
            <Button Text="Show row state" HorizontalOptions="Start" Clicked="ShowRowState"/>
            <Entry x:Name="rowNumber" Text="  0"/>
            <Entry x:Name="rowState" IsReadOnly="True" Text="default_value"/>
            <Button Text="Show properties" HorizontalOptions="Start" Clicked="ShowProperty"/>
            <Picker x:Name="tableSelected" HorizontalOptions="FillAndExpand" SelectedIndexChanged="UpdateColumnsNames">
