<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    
    
    xmlns:syncfusionDG="clr-namespace:Syncfusion.SfDataGrid.XForms;assembly=Syncfusion.SfDataGrid.XForms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Class="dbLabs.MainPage"
    Appearing="PageLoaded"
    Disappearing="PageClosed"
    >
    
    
    
    <StackLayout Orientation="Vertical" >
        <!-- Place new controls here
        Appearing="PageLoaded"
        
        -->

        <StackLayout Orientation="Horizontal">
            <Button Text="Show Contracts"  HorizontalOptions="Start" Clicked="ShowContracts"/>
            <Button Text="Show ShopItems"  HorizontalOptions="Start" Clicked="ShowShopItems"/>
            <Button Text="Show Purchases"  HorizontalOptions="Start" Clicked="ShowPurchase"/>
        </StackLayout>

        <StackLayout x:Name="RRA" Orientation="Horizontal">
            <Button Text="Sync" HorizontalOptions="Start" Clicked="Sync"/>
            <Button Text="Remove Contract" HorizontalOptions="Start" Clicked="RemoveContract"/>
            <Button Text="Remove ShopItem" HorizontalOptions="Start" Clicked="RemoveShopItem"/>

            <Button Text="Add ShopItem" HorizontalOptions="Start" Clicked="AddShopItem"/>
            <Button Text="Update ShopItem" HorizontalOptions="Start" Clicked="UpdateShopItem"/>

            <Button Text="Buy Item" HorizontalOptions="Start" Clicked="BuyItem"/>
            <Entry x:Name="buyAmount" Text="1"/>
        </StackLayout>

        <syncfusionDG:SfDataGrid x:Name="ShowGrid"
                               IsVisible="True"
                               AutoGenerateColumns="True"
                               ColumnSizer="Star"

                               AllowEditing="True"
                               SelectionMode="Single"

                               AllowDeleting="True"
                               AllowKeyboardNavigation="True"
                               NavigationMode="Cell"
                               AllowDraggingColumn="True"
                               ShowRowHeader="True"
                               >
        </syncfusionDG:SfDataGrid>



        <StackLayout Orientation="Horizontal">
                <Button Text="Average purchase amount" HorizontalOptions="Start" Clicked="ProductAVGamount"/>
                <Button Text="Customer Total" HorizontalOptions="Start" Clicked="CustomerTotal"/>
                <Button Text="Provider Info" HorizontalOptions="Start" Clicked="ProviderInfo"/>
                <Button Text="Purchase Info" HorizontalOptions="Start" Clicked="PurchaseInfo"/>
            </StackLayout>
        <!-- Result -->
        <StackLayout Orientation="Horizontal">
                <Button Text="query" HorizontalOptions="Start" />
        </StackLayout>
        
        <syncfusionDG:SfDataGrid x:Name="resultGrid"
                               IsVisible="True"
                               AutoGenerateColumns="True"
                               ColumnSizer="Star"

                               AllowEditing="True"
                               SelectionMode="Single"

                               AllowDeleting="True"
                               AllowKeyboardNavigation="True"
                               NavigationMode="Cell"
                               AllowDraggingColumn="True"
                               ShowRowHeader="True"
                               >
        </syncfusionDG:SfDataGrid>
