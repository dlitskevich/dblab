        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Button Text="Filter Contracts" HorizontalOptions="Start" Clicked="JoinContract"/>
                <Entry x:Name="minPrice" TextColor="Red" Text="1000"/>
                <Entry x:Name="maxPrice" TextColor="Green" Text="5000"/>
                <Label Text="Sort by type" TextColor="Aqua"/>
                <CheckBox x:Name="byType"/>
                <Label Text="Sort by Date" TextColor="Pink"/>
                <CheckBox x:Name="byDate"/>
            </StackLayout>

